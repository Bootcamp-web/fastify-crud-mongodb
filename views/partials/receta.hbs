<div class="card" style="margin: 10px">
	<div class="card-body">
		<h5 class="card-title">{{receta.nombre}}</h5>
		<p class="card-text">Instructions: {{receta.instrucciones}}</p>
		<div class="row">
			{{#each ingredientes}}
			<div class="col">
				{{>ingrediente}}
			</div>
			{{/each}}
		</div>
		<div style="margin-top: 50px;">
			{{>add_ingredient receta}}
		</div>
	</div>
</div>